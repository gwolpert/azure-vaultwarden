      "metadata": {
        "description": "Environment name (dev, staging, prod)"
      }
    },
    "domainName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The domain name for Vaultwarden (e.g., https://vault.example.com)"
      }
    },
    "adminToken": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Admin token for Vaultwarden admin panel (leave empty to disable admin panel)"
      }
    },
    "signupsAllowed": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Allow new user signups"
      }
    },
    "vaultwardenImageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Vaultwarden container image tag"
      }
    }
  },
  "variables": {
    "uniqueSuffix": "[uniqueString(subscription().subscriptionId, parameters('resourceGroupName'), parameters('location'))]",
    "namingPrefix": "[format('vw-{0}', parameters('environmentName'))]",
    "storageAccountName": "[format('vw{0}st{1}', parameters('environmentName'), variables('uniqueSuffix'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2023-07-01",
      "name": "[parameters('resourceGroupName')]",
      "location": "[parameters('location')]",
      "tags": {
        "Application": "Vaultwarden",
        "Environment": "[parameters('environmentName')]",
        "ManagedBy": "ARM-Template"
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "vaultwarden-resources",
      "resourceGroup": "[parameters('resourceGroupName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups', parameters('resourceGroupName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {},
          "variables": {},
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks",
              "apiVersion": "2023-05-01",
              "name": "[format('{0}-vnet', variables('namingPrefix'))]",
              "location": "[parameters('location')]",
              "properties": {
                "addressSpace": {
                  "addressPrefixes": [
                    "10.0.0.0/16"
                  ]
                },
                "subnets": [
                  {
                    "name": "container-apps-subnet",
                    "properties": {
                      "addressPrefix": "10.0.0.0/23"
                    }
                  }
                ]
              }
            },
            {
              "type": "Microsoft.Storage/storageAccounts",
              "apiVersion": "2023-01-01",
              "name": "[variables('storageAccountName')]",
              "location": "[parameters('location')]",
              "kind": "StorageV2",
              "sku": {
                "name": "Standard_LRS"
              },
              "properties": {
                "allowBlobPublicAccess": false,
                "minimumTlsVersion": "TLS1_2",
                "supportsHttpsTrafficOnly": true
              }
            },
            {
              "type": "Microsoft.Storage/storageAccounts/fileServices",
              "apiVersion": "2023-01-01",
              "name": "[format('{0}/default', variables('storageAccountName'))]",
              "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
              ]
            },
            {
              "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
              "apiVersion": "2023-01-01",
              "name": "[format('{0}/default/vaultwarden-data', variables('storageAccountName'))]",
              "properties": {
                "accessTier": "TransactionOptimized"
              },
              "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/fileServices', variables('storageAccountName'), 'default')]"
              ]
            },
            {
              "type": "Microsoft.OperationalInsights/workspaces",
              "apiVersion": "2022-10-01",
              "name": "[format('{0}-logs', variables('namingPrefix'))]",
              "location": "[parameters('location')]",
              "properties": {
                "retentionInDays": 30,
                "sku": {
                  "name": "PerGB2018"
                }
              }
            },
            {
              "type": "Microsoft.App/managedEnvironments",
              "apiVersion": "2023-05-01",
              "name": "[format('{0}-env', variables('namingPrefix'))]",
              "location": "[parameters('location')]",
              "properties": {
                "vnetConfiguration": {
                  "infrastructureSubnetId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', format('{0}-vnet', variables('namingPrefix')), 'container-apps-subnet')]"
                },
                "appLogsConfiguration": {
                  "destination": "log-analytics",
                  "logAnalyticsConfiguration": {
                    "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', format('{0}-logs', variables('namingPrefix')))).customerId]",
                    "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', format('{0}-logs', variables('namingPrefix'))), '2022-10-01').primarySharedKey]"
                  }
                },
                "zoneRedundant": false
              },
              "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', format('{0}-vnet', variables('namingPrefix')))]",
                "[resourceId('Microsoft.OperationalInsights/workspaces', format('{0}-logs', variables('namingPrefix')))]"
              ]
            },
            {
              "type": "Microsoft.App/managedEnvironments/storages",
              "apiVersion": "2023-05-01",
              "name": "[format('{0}-env/vaultwarden-storage', variables('namingPrefix'))]",
              "properties": {
                "azureFile": {
                  "shareName": "vaultwarden-data",
                  "accountName": "[variables('storageAccountName')]",
                  "accountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-01-01').keys[0].value]",
                  "accessMode": "ReadWrite"
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.App/managedEnvironments', format('{0}-env', variables('namingPrefix')))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts/fileServices/shares', variables('storageAccountName'), 'default', 'vaultwarden-data')]"
              ]
            },
            {
              "type": "Microsoft.App/containerApps",
              "apiVersion": "2023-05-01",
              "name": "[format('{0}-app', variables('namingPrefix'))]",
              "location": "[parameters('location')]",
              "identity": {
                "type": "SystemAssigned"
              },
              "properties": {
                "environmentId": "[resourceId('Microsoft.App/managedEnvironments', format('{0}-env', variables('namingPrefix')))]",
                "configuration": {
                  "ingress": {
                    "external": true,
                    "targetPort": 80,
                    "transport": "http",
                    "allowInsecure": false,
                    "traffic": [
                      {
                        "latestRevision": true,
                        "weight": 100
                      }
                    ]
                  },
                  "secrets": [
                    {
                      "name": "admin-token",
                      "value": "[if(not(equals(parameters('adminToken'), '')), parameters('adminToken'), 'disabled')]"
                    }
                  ]
                },
                "template": {
                  "containers": [
                    {
                      "name": "vaultwarden",
                      "image": "[format('vaultwarden/server:{0}', parameters('vaultwardenImageTag'))]",
                      "resources": {
                        "cpu": 0.5,
                        "memory": "1Gi"
                      },
                      "env": [
                        {
                          "name": "DOMAIN",
                          "value": "[if(not(equals(parameters('domainName'), '')), parameters('domainName'), format('https://{0}-app.{1}', variables('namingPrefix'), reference(resourceId('Microsoft.App/managedEnvironments', format('{0}-env', variables('namingPrefix')))).defaultDomain))]"
                        },
                        {
                          "name": "SIGNUPS_ALLOWED",
                          "value": "[string(parameters('signupsAllowed'))]"
                        },
                        {
                          "name": "ENABLE_DB_WAL",
                          "value": "true"
                        },
                        {
                          "name": "ADMIN_TOKEN",
                          "secretRef": "admin-token"
                        }
                      ],
                      "volumeMounts": [
                        {
                          "volumeName": "vaultwarden-data",
                          "mountPath": "/data"
                        }
                      ]
                    }
                  ],
                  "scale": {
                    "minReplicas": 1,
                    "maxReplicas": 3
                  },
                  "volumes": [
                    {
                      "name": "vaultwarden-data",
                      "storageType": "AzureFile",
                      "storageName": "vaultwarden-storage"
                    }
                  ]
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.App/managedEnvironments', format('{0}-env', variables('namingPrefix')))]",
                "[resourceId('Microsoft.App/managedEnvironments/storages', format('{0}-env', variables('namingPrefix')), 'vaultwarden-storage')]"
              ]
            }
          ],
          "outputs": {
            "vaultwardenFqdn": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.App/containerApps', format('{0}-app', variables('namingPrefix')))).configuration.ingress.fqdn]"
            },
            "storageAccountName": {
              "type": "string",
              "value": "[variables('storageAccountName')]"
            },
            "containerAppName": {
              "type": "string",
              "value": "[format('{0}-app', variables('namingPrefix'))]"
            }
          }
        }
      }
    }
  ],
  "outputs": {
    "resourceGroupName": {
      "type": "string",
      "value": "[parameters('resourceGroupName')]"
    },
    "vaultwardenUrl": {
      "type": "string",
      "value": "[format('https://{0}', reference(resourceId('Microsoft.Resources/deployments', 'vaultwarden-resources'), '2022-09-01').outputs.vaultwardenFqdn.value)]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Resources/deployments', 'vaultwarden-resources'), '2022-09-01').outputs.storageAccountName.value]"
    },
    "containerAppName": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Resources/deployments', 'vaultwarden-resources'), '2022-09-01').outputs.containerAppName.value]"
    }
  }
}
